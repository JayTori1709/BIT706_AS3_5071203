
<UserControl xmlns="https://github.com/avaloniaui">
  <StackPanel>
    <TextBlock Text="Manage Users" FontSize="20" Margin="10"/>
    <ItemsControl Items="{Binding Users}">
      <ItemsControl.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding Username}" Margin="5"/>
            <TextBlock Text="{Binding Role}" Margin="5"/>
            <Button Content="Delete" Command="{Binding DataContext.DeleteCommand, 
                    RelativeSource={RelativeSource AncestorType=UserControl}}" 
                    CommandParameter="{Binding}" Margin="5"/>
          </StackPanel>
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>
    <Button Content="Add User" Command="{Binding AddUserCommand}" Margin="5"/>
  </StackPanel>
</UserControl>
