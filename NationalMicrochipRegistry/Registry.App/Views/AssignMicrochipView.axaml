<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RegistryApp.Views.AssignMicrochipView">
  <StackPanel>
    <TextBlock Text="Assign Microchip" FontSize="20" Margin="10"/>

    <ComboBox ItemsSource="{Binding Animals}" SelectedItem="{Binding SelectedAnimal}" Margin="5">
      <ComboBox.ItemTemplate>
        <DataTemplate>
          <TextBlock Text="{Binding Name}" />
        </DataTemplate>
      </ComboBox.ItemTemplate>
    </ComboBox>

    <ComboBox ItemsSource="{Binding AvailableChips}" SelectedItem="{Binding SelectedChip}" Margin="5">
      <ComboBox.ItemTemplate>
        <DataTemplate>
          <TextBlock Text="{Binding SerialNumber}" />
        </DataTemplate>
      </ComboBox.ItemTemplate>
    </ComboBox>

    <Button Content="Assign" Command="{Binding AssignCommand}" Margin="5"/>
  </StackPanel>
</UserControl>
