<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RegistryApp.Views.RegisterAnimalView">
  <StackPanel Margin="20" Width="400" Spacing="10">
    <TextBlock Text="Register Animal" FontSize="20" Margin="10"/>
    <TextBox Watermark="Animal Name" Text="{Binding AnimalName}"  />
    <TextBox Watermark="Species" Text="{Binding Species}"  />
    <TextBox Watermark="Owner Name" Text="{Binding OwnerName}"  />

    <ComboBox ItemsSource="{Binding Clinics}" 
              SelectedItem="{Binding SelectedClinic}" 
              DisplayMemberBinding="{Binding Name}" 
              PlaceholderText="Select Clinic" />

    <Button Content="Register" Command="{Binding RegisterCommand}" Margin="5"/>
    <TextBlock Text="{Binding StatusMessage}" Foreground="Green" />
  </StackPanel>
</UserControl>
