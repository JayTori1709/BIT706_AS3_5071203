<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RegistryApp.Views.RegisterAnimalView">
  <StackPanel>
    <TextBlock Text="Register Animal" FontSize="20" Margin="10"/>
    <TextBox Watermark="Animal Name" Text="{Binding AnimalName}" Margin="5"/>
    <TextBox Watermark="Species" Text="{Binding Species}" Margin="5"/>
    <TextBox Watermark="Owner Name" Text="{Binding OwnerName}" Margin="5"/>
    <Button Content="Register" Command="{Binding RegisterCommand}" Margin="5"/>
  </StackPanel>
</UserControl>
