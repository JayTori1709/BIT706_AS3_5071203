<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RegistryApp.Views.DashboardView">
  <StackPanel>
    <TextBlock Text="Welcome to Dashboard" FontSize="20" Margin="10"/>
    <Button Content="Register Animal" Command="{Binding NavigateRegisterAnimal}" Margin="5"/>
    <Button Content="Assign Microchip" Command="{Binding NavigateAssignMicrochip}" Margin="5"/>
    <Button Content="Manage Users" Command="{Binding NavigateManageUsers}" 
            IsVisible="{Binding IsAdmin}" Margin="5"/>
  </StackPanel>
</UserControl>
