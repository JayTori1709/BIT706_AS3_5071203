<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RegistryApp.Views.AssignMicrochipView">
  <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="350" Spacing="10">
    <TextBlock Text="Assign Microchip" FontSize="20" HorizontalAlignment="Center"/>

    <!-- Animal Dropdown -->
    <ComboBox ItemsSource="{Binding Animals}" SelectedItem="{Binding SelectedAnimal}">
      <ComboBox.ItemTemplate>
        <DataTemplate>
          <TextBlock Text="{Binding Name}" />
        </DataTemplate>
      </ComboBox.ItemTemplate>
    </ComboBox>

    <!-- Microchip Dropdown -->
    <ComboBox ItemsSource="{Binding AvailableChips}" SelectedItem="{Binding SelectedChip}">
      <ComboBox.ItemTemplate>
        <DataTemplate>
          <TextBlock Text="{Binding SerialNumber}" />
        </DataTemplate>
      </ComboBox.ItemTemplate>
    </ComboBox>

    <!-- Action Buttons -->
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
      <Button Content="Assign" Command="{Binding AssignCommand}" />
      <Button Content="Back" Command="{Binding BackCommand}" />
    </StackPanel>
  </StackPanel>
</UserControl>
